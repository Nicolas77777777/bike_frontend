<%- include('partials/header', { titolo: titolo || 'Errore - Bike and Hike' }) %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body text-center py-5">
          <div class="mb-4">
            <i class="bi bi-exclamation-diamond text-danger" style="font-size: 5rem;"></i>
          </div>
          
          <h1 class="display-4 text-danger mb-3">Errore</h1>
          <h2 class="h4 mb-3">Si è verificato un problema</h2>
          
          <p class="text-muted mb-4">
            <%= errore || 'Si è verificato un errore inaspettato. Riprova più tardi.' %>
          </p>
          
          <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Cosa puoi fare:</strong>
            <ul class="list-unstyled mt-2 mb-0">
              <li>• Ricarica la pagina</li>
              <li>• Torna alla home e riprova</li>
              <li>• Contatta l'amministratore se il problema persiste</li>
            </ul>
          </div>
          
          <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <button onclick="location.reload()" class="btn btn-primary">
              <i class="bi bi-arrow-clockwise me-1"></i>Ricarica Pagina
            </button>
            <a href="/home" class="btn btn-success">
              <i class="bi bi-house-door me-1"></i>Torna alla Home
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left me-1"></i>Indietro
            </button>
          </div>
          
          <div class="mt-5">
            <img src="/img/logo.png" alt="Logo Bike and Hike" class="opacity-50" style="max-width: 100px;">
            <div class="mt-2">
              <small class="text-muted">Bike and Hike - Sistema di Gestione</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>